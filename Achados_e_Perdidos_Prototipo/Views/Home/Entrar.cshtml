@model Achados_e_Perdidos_Prototipo.Models.Login


@{
	ViewBag.Title = "AchadosPerdidos";

}

<link href="~/Content/paginastilo.css" rel="stylesheet" />

<section class="promo section offset-header">
    <div class="container">

        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                @*<h1 class="text-center login-title">Sign in to continue to Bootsnipp</h1>*@
                <div class="account-wall">
                    <img class="profile-img" src="http://achadosperdidos.azurewebsites.net/Scripts/images/login-icon.png"
                         alt="">

                    <form class="form-signin" action="ValidaLogon" method="POST">

                        <input type="text" value="@Model.Email" id="EmailID" name="EmailID" class="form-control" placeholder="usuário" required autofocus>
                        <label class="CorLabel" for="nome"></label>
                        <input type="password" value="@Model.Senha" id="SenhaID" name="SenhaID" class="form-control" placeholder="senha" required>

                        <span role="alert" class="error-msg" id="errormsg_0_Passwd">
                            @Model.Result
                        </span>

                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Entrar">

                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me"><a class="pull-left">Lembrar-me</a></label>
                        <a href="Cadastro" class="pull-right need-help">Criar uma conta </a><span class="clearfix"></span>

                        <a href="RecupSenha" class="pull-left need-help">Esqueci minha senha </a><span class="clearfix"></span>
                        
                    </form>

                    @*<a class="pull-right need-help">@Html.ActionLink("Criar conta", "Cadastro", "Home") </a>*@
                </div>
                
            </div>
        </div>
    </div>>
    <link href="~/Content/paginastilo.css" rel="stylesheet" />

</section>