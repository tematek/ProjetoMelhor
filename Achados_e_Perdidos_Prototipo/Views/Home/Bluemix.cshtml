@model Achados_e_Perdidos_Prototipo.Models.AtributosBluemix

@{
	ViewBag.Title = "Bluemix";
}


<section id="license" class="license section">

	<form action="Bluemix" method="POST">

		<div class="container">

			<h3>Assitente de Computação Cognitiva</h3>
			<p>Alguma dúvida?</p>



			<p>Pergunte ao assistente do AchadosPerdidos no campo abaixo:</p>
			<div class="row">
				<div class="col-lg-10 col-md-10 col-xs-8">
					<input placeholder="Faça a sua pergunta" id="PerguntaEntrada" name="PerguntaEntrada" value="@Model.EntradaPergunda" required class="questionText form-control">
					<div class="col-lg-10 col-md-10 col-xs-8">
						<span role="alert" class="results" id="errormsg_0_Passwd">
							<h3>
								@Model.SaidaResposta
							</h3>
						</span>
					</div>
				</div>
				<div class="col-lg-2 col-md-2 col-xs-4">
					<button type="submit" class="btn btn-block ask-btn">Pergunte</button>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-xs-12"></div>
			</div>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-xs-12">
					<p> </p>
				</div>
			</div>
		</div>
		<div class="col-lg-12">
			<div style="display:none" class="row loading">
				<h3>Resposta</h3>
				<div class="col-lg-12 col-xs-12 text-center">
				</div>
			</div>
			<div style="display:none" class="results">
				<h3>Resposta</h3>
				<div class="well">

				</div>

			</div>
			<div style="display:none;" class="error">
				<h2>Error</h2>
				<div class="well">
					<div class="errorMsg">
					</div>
				</div>
			</div>


		</div>
	</form>

	<script type="text/javascript" src="~/Scripts/js/jquery-1.11.1.min.js"></script>
	<script type="text/javascript" src="~/Scripts/js/bluemix.js"></script>
</section>
